<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color for the button (change the color as needed) -->
    <item android:drawable="@android:color/transparent" />

    <!-- Border for the button (change the color and stroke width as needed) -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color -->
            <stroke
                android:width="2dp"
                android:color="#000000" />
            <corners android:radius="8dp" /> <!-- Corner radius (optional) -->
        </shape>
    </item>
</layer-list>
