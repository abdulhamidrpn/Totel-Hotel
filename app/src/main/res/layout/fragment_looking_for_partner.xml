<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.fragment.DashboardFragment">

    <data>


        <variable
            name="viewModel"
            type="com.rpn.totel.ui.viewmodel.DashboardViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/colorBackground2"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:gravity="center_vertical">


                    <ImageButton
                        android:id="@+id/iv_back"
                        style="@style/icon_style"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_18sdp"
                        android:background="@drawable/btn_ripple_circular"
                        android:onClick="onBackButtonClicked"
                        app:srcCompat="@drawable/ic_back"
                        app:tint="@color/colorSubTitleText" />

                    <TextView
                        android:id="@+id/tv_title"
                        style="@style/titleText"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/btn_more"
                        android:layout_toEndOf="@id/iv_back"
                        android:autoSizeMaxTextSize="@dimen/_16ssp"
                        android:autoSizeMinTextSize="@dimen/_10ssp"
                        android:autoSizeTextType="uniform"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:paddingStart="@dimen/_12sdp"
                        android:paddingEnd="@dimen/_12sdp"


                        android:text="Alex Norman" />


                    <ImageButton
                        android:id="@+id/btn_more"
                        style="@style/icon_style"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:background="@drawable/btn_ripple_circular_transparent"
                        app:srcCompat="@drawable/more" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/pager_sort_mode"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_180sdp"
                        android:background="@drawable/thumbnail_men"
                        android:theme="@style/OverScrollColor"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tab"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/pager_sort_mode"
                        android:background="@android:color/transparent"
                        app:tabBackground="@drawable/tab_selector"
                        app:tabGravity="center"
                        app:tabIndicatorAnimationMode="linear"
                        app:tabIndicatorHeight="0dp" />

                    <ImageButton
                        android:id="@+id/btn_fav"
                        style="@style/icon_style"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_12sdp"
                        android:background="@drawable/btn_ripple_circular"
                        android:elevation="@dimen/_6sdp"
                        android:padding="@dimen/_6sdp"
                        android:scaleType="centerCrop"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/ic_no_favorite" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_12sdp"
                    android:paddingEnd="@dimen/_12sdp">

                    <TextView
                        style="@style/titleText"
                        android:text="Hotel Huntington"
                        android:textColor="@color/white" />
                    <!-- User Name -->
                    <TextView
                        style="@style/subTitleText"
                        android:text="1200 E Huntington Dr,, Los Angeles County, California, Duarte, United States"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <!--Details-->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorBackground"
                        app:contentPaddingBottom="@dimen/_4sdp"
                        app:contentPaddingLeft="@dimen/_12sdp"
                        app:contentPaddingRight="@dimen/_12sdp"
                        app:contentPaddingTop="@dimen/_8sdp">

                        <LinearLayout
                            android:id="@+id/container_details_hotel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:animateLayoutChanges="true"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/_8sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="5">

                                <TextView
                                    style="@style/subTitleText"
                                    android:layout_width="0dp"
                                    android:layout_weight="2"

                                    android:paddingEnd="@dimen/_16sdp"
                                    android:text="Rent" />

                                <TextView
                                    style="@style/subTitleText"
                                    android:layout_width="0dp"
                                    android:layout_weight="3"

                                    android:paddingEnd="@dimen/_16sdp"
                                    android:text="$920/Night"
                                    android:textColor="@color/colorTitleText" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/_4sdp"
                                android:weightSum="5">

                                <TextView
                                    style="@style/subTitleText"
                                    android:layout_width="0dp"
                                    android:layout_weight="2"

                                    android:paddingEnd="@dimen/_16sdp"
                                    android:text="Duration" />

                                <TextView
                                    style="@style/subTitleText"
                                    android:layout_width="0dp"
                                    android:layout_weight="3"

                                    android:paddingEnd="@dimen/_16sdp"
                                    android:text="14 Feb - 16 Feb"
                                    android:textColor="@color/colorTitleText" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/_4sdp"
                                android:weightSum="5">

                                <TextView
                                    style="@style/subTitleText"
                                    android:layout_width="0dp"
                                    android:layout_weight="2"

                                    android:paddingEnd="@dimen/_16sdp"
                                    android:text="Time" />


                                <TextView
                                    style="@style/subTitleText"
                                    android:layout_width="0dp"
                                    android:layout_weight="3"

                                    android:paddingEnd="@dimen/_16sdp"
                                    android:text="10:50 - 19:20 Each Day"
                                    android:textColor="@color/colorTitleText" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/_4sdp"
                                android:weightSum="5">

                                <TextView
                                    style="@style/subTitleText"
                                    android:layout_width="0dp"
                                    android:layout_weight="2"

                                    android:paddingEnd="@dimen/_16sdp"
                                    android:text="Features" />


                                <TextView
                                    style="@style/subTitleText"
                                    android:layout_width="0dp"
                                    android:layout_weight="3"

                                    android:paddingEnd="@dimen/_16sdp"
                                    android:text="Free Wifi
Pets Accepted
Gym
En-suite available
Remote viewing available
Communal living room"
                                    android:textColor="@color/colorTitleText" />
                            </LinearLayout>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_view_profile"
                                style="@style/button_style"
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_18sdp"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:minWidth="@dimen/_140sdp"
                                android:text="View Profile"
                                android:textColor="@color/colorTitleTextInverse"
                                app:backgroundTint="@color/colorBackgroundInverse" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <!--Details-->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:backgroundTint="@color/colorBackground"
                        app:contentPaddingBottom="@dimen/_4sdp"
                        app:contentPaddingLeft="@dimen/_12sdp"
                        app:contentPaddingRight="@dimen/_12sdp"
                        app:contentPaddingTop="@dimen/_4sdp">

                        <LinearLayout
                            android:id="@+id/container_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:animateLayoutChanges="true"
                            android:orientation="vertical">

                            <!--Profile-->
                            <TextView
                                style="@style/titleText"
                                android:text="Basic Info"
                                android:textSize="@dimen/_16ssp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="5">

                                <TextView
                                    style="@style/subTitleText"
                                    android:layout_width="0dp"
                                    android:layout_weight="2"

                                    android:paddingEnd="@dimen/_16sdp"
                                    android:text="Gender" />

                                <TextView
                                    style="@style/subTitleText"
                                    android:layout_width="0dp"
                                    android:layout_weight="3"

                                    android:paddingEnd="@dimen/_16sdp"
                                    android:text="Male"
                                    android:textColor="@color/colorTitleText" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/_4sdp"
                                android:weightSum="5">

                                <TextView
                                    style="@style/subTitleText"
                                    android:layout_width="0dp"
                                    android:layout_weight="2"

                                    android:paddingEnd="@dimen/_16sdp"
                                    android:text="Age" />

                                <TextView
                                    style="@style/subTitleText"
                                    android:layout_width="0dp"
                                    android:layout_weight="3"

                                    android:paddingEnd="@dimen/_16sdp"
                                    android:text="24 Years"
                                    android:textColor="@color/colorTitleText" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/_4sdp"
                                android:weightSum="5">

                                <TextView
                                    style="@style/subTitleText"
                                    android:layout_width="0dp"
                                    android:layout_weight="2"

                                    android:paddingEnd="@dimen/_16sdp"
                                    android:text="Occupation" />


                                <TextView
                                    style="@style/subTitleText"
                                    android:layout_width="0dp"
                                    android:layout_weight="3"

                                    android:paddingEnd="@dimen/_16sdp"
                                    android:text="Student"
                                    android:textColor="@color/colorTitleText" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/_4sdp"
                                android:weightSum="5">

                                <TextView
                                    style="@style/subTitleText"
                                    android:layout_width="0dp"
                                    android:layout_weight="2"

                                    android:paddingEnd="@dimen/_16sdp"
                                    android:text="Interests" />


                                <TextView
                                    style="@style/subTitleText"
                                    android:layout_width="0dp"
                                    android:layout_weight="3"

                                    android:paddingEnd="@dimen/_16sdp"
                                    android:text="@string/demo_text_interests"
                                    android:textColor="@color/colorTitleText" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/_4sdp"
                                android:weightSum="5">

                                <TextView
                                    style="@style/subTitleText"
                                    android:layout_width="0dp"
                                    android:layout_weight="2"

                                    android:paddingEnd="@dimen/_16sdp"
                                    android:text="Language" />


                                <TextView
                                    style="@style/subTitleText"
                                    android:layout_width="0dp"
                                    android:layout_weight="3"

                                    android:paddingEnd="@dimen/_16sdp"
                                    android:text="English, Bengali"
                                    android:textColor="@color/colorTitleText" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/container_compatible_with"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_12sdp"
                                android:animateLayoutChanges="true"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/titleText"
                                    android:text="Compatible with"
                                    android:textSize="@dimen/_16ssp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="5">

                                    <TextView
                                        style="@style/subTitleText"
                                        android:layout_width="0dp"
                                        android:layout_weight="2"

                                        android:paddingEnd="@dimen/_16sdp"
                                        android:text="Gender" />

                                    <TextView
                                        style="@style/subTitleText"
                                        android:layout_width="0dp"
                                        android:layout_weight="3"

                                        android:paddingEnd="@dimen/_16sdp"
                                        android:text="@string/male_female"
                                        android:textColor="@color/colorTitleText" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:paddingTop="@dimen/_4sdp"
                                    android:weightSum="5">

                                    <TextView
                                        style="@style/subTitleText"
                                        android:layout_width="0dp"
                                        android:layout_weight="2"

                                        android:paddingEnd="@dimen/_16sdp"
                                        android:text="Age" />

                                    <TextView
                                        style="@style/subTitleText"
                                        android:layout_width="0dp"
                                        android:layout_weight="3"

                                        android:paddingEnd="@dimen/_16sdp"
                                        android:text="Between 18 to 32 Years old"
                                        android:textColor="@color/colorTitleText" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:paddingTop="@dimen/_4sdp"
                                    android:weightSum="5">

                                    <TextView
                                        style="@style/subTitleText"
                                        android:layout_width="0dp"
                                        android:layout_weight="2"

                                        android:paddingEnd="@dimen/_16sdp"
                                        android:text="Occupation" />


                                    <TextView
                                        style="@style/subTitleText"
                                        android:layout_width="0dp"
                                        android:layout_weight="3"

                                        android:paddingEnd="@dimen/_16sdp"
                                        android:text="Student AND professional"
                                        android:textColor="@color/colorTitleText" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:paddingTop="@dimen/_4sdp"
                                    android:weightSum="5">

                                    <TextView
                                        style="@style/subTitleText"
                                        android:layout_width="0dp"
                                        android:layout_weight="2"

                                        android:paddingEnd="@dimen/_16sdp"
                                        android:text="Pets" />


                                    <TextView
                                        style="@style/subTitleText"
                                        android:layout_width="0dp"
                                        android:layout_weight="3"

                                        android:paddingEnd="@dimen/_16sdp"
                                        android:text="@string/pets_no_pets"
                                        android:textColor="@color/colorTitleText" />
                                </LinearLayout>

                                <TextView
                                    style="@style/titleText"
                                    android:text="Note"
                                    android:textSize="@dimen/_16ssp" />

                                <TextView
                                    style="@style/subTitleText"
                                    android:text="Iâ€™m looking for a roommate in a social house share with people a similar age to me, or a group to buddy up with and find somewhere. I enjoy drawing and painting, as well as watching films and listening to podcasts." />


                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_send_proposal"
                    style="@style/button_style"
                    android:layout_margin="@dimen/_12sdp"
                    android:text="Send a proposal Now"
                    app:icon="@drawable/send_proposal"
                    app:iconGravity="textStart"
                    app:iconTint="@color/white" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>