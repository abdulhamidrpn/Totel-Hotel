<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:background="@color/colorBackground"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:selectableItemBackground"
        android:orientation="vertical"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_4sdp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Profile Image -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_profile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:scaleType="centerCrop"
                app:shapeAppearance="@style/ShapeAppearance.App.RoundedImageView"
                app:srcCompat="@drawable/potrait_man"
                app:strokeColor="@color/colorTitleText"
                app:strokeWidth="0dp" />

            <ImageButton
                android:id="@+id/btn_fav"
                style="@style/icon_style"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:background="@drawable/btn_ripple_circular"
                android:elevation="@dimen/_6sdp"
                android:padding="@dimen/_6sdp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_no_favorite" />


        </RelativeLayout>

        <TextView
            style="@style/titleText"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:layout_weight="1"
            android:text="Apartments"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold" />

        <TextView
            style="@style/subTitleText"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_12sdp"
            android:maxLines="2"
            android:text="Saved 2"
            android:textColor="@color/colorSubTitleText"
            android:textSize="@dimen/_12ssp" />


    </LinearLayout>

</layout>